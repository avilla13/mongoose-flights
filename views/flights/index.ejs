<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Airline</th>  
      <th>Airport</th>   
      <th>Flight No</th>
      <th>Departures</th>
    </tr>
  </thead>
  <tbody>
    <!-- Write the line of EJS to iterate over flights using forEach -->
    <% flights.forEach(f => { %>
        <tr>
            <td><a href="/flights/<%= f._id %>"> INFO </a></td>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departs %></td>             
        </tr>
        <!-- Close the forEach using EJS here -->
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>